# customize these
export ETH1_NETWORK=mainnet
export ETH2_NETWORK=mainnet
export MACHINE_INDEX=01
export VOLUME_INDEX=01
export DO_REGION=nyc3
export DO_BASE_IMAGE=ubuntu-20-04-x64
export DO_MACHINE_TYPE=s-8vcpu-16gb

# leave these alone
export MACHINE_NAME=eth2-$ETH2_NETWORK-$MACHINE_INDEX
export DO_VOLUME_NAME=eth2-$ETH2_NETWORK-extra-$VOLUME_INDEX

# there is no flag for "mainnet"
if [ $ETH1_NETWORK != "mainnet" ]; then
  export ETH1_NETWORK_FLAG=--$ETH1_NETWORK
else
  # use valid meaningless flag to appease docker + geth
  export ETH1_NETWORK_FLAG="--miner.extradata=ignore"
fi
if [ $ETH2_NETWORK != "mainnet" ]; then
  export ETH2_NETWORK_FLAG=--$ETH2_NETWORK
else
  # use empty flag to appease docker
  export ETH2_NETWORK_FLAG=""
fi